
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="text-center col-xs-12 col-sm-offset-3 col-sm-6">
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username" class="form-control">{{ 'security.login.username'|trans }}</label>
<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="text-center form-control"/>

    <label for="password" class="form-control">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required"  class="text-center form-control"/>

    <label for="remember_me" class="form-control">{{ 'security.login.remember_me'|trans }}</label>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on"  class="text-center form-control"/>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  class="btn btn-success btn-block"/>
</form>
</div>